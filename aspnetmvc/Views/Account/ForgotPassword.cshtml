@model Ejyle.DevAccelerate.Samples.AspNetMvc.Models.ForgotPasswordViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Forgot Password";
}

@using (Html.BeginForm("ForgotPassword", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <p>
        <label for="inputEmail">Email address</label>
        @Html.TextBoxFor(m => m.Email, new { id= "inputEmail", @class = "form-control", @placeholder = "Email address" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </p>
    <p>
        <button class="btn btn-primary" type="submit">Submit</button>
    </p>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}