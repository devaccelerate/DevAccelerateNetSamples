<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | DevAccelerate Samples</title>
    @Styles.Render("~/Content/defaultLayoutCss")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("head", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <a class="navbar-brand" href="@Url.Action("Index", "Home", new { area = ""})">DevAccelerate ASP.NET MVC Sample</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home", new { area = ""})">Home</a>
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </nav>
    </header>

    <main role="main" class="container">
        <h2>
        @ViewBag.Title
            @if(ViewBag.SubTitle != null)
            {
                <br /><span class="subtitle">@ViewBag.SubTitle</span>
            }
        </h2>
        <hr />
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    @RenderSection("breadCrumb", required: false)
                    @if (ViewBag.Message != null)
                    {
                        if (ViewBag.Message is Ejyle.DevAccelerate.Samples.AspNetMvc.Models.MessageViewModel)
                        {
                            Html.Partial("_MessagePartial", ViewBag.Message as Ejyle.DevAccelerate.Samples.AspNetMvc.Models.MessageViewModel);
                        }
                    }
                    @{Html.Partial("_ModelStateErrorPartial");}
                    @RenderBody()
                </div>
            </div>
        </div>
    </main>
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/popper.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/bootbox.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
