@model Ejyle.DevAccelerate.Samples.AspNetMvc.Models.VerifyPhoneNumberViewModel
@{
    ViewBag.Title = "Verify Phone Number";
}
@section BreadCrumb
{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Manage")">Manage Account</a></li>
            <li class="breadcrumb-item active" aria-current="page">Verify Phone Number</li>
        </ol>
    </nav>
}
@using (Html.BeginForm("VerifyPhoneNumber", "Manage", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("phoneNumber", @Model.PhoneNumber)
    <div class="alert alert-info">@ViewBag.Status</div>
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <p>
        <label for="inputCode">Code</label>
        @Html.TextBoxFor(m => m.Code, new { id = "inputCode", @class = "form-control" })
    </p>
    <p>
        <input type="submit" class="btn btn-primary" value="Submit" />
    </p>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
