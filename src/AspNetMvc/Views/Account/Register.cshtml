@using Ejyle.DevAccelerate.Samples.AspNetMvc.Models
@model RegisterViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Register";
}

@using (Html.BeginForm("Register", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(m => m.SubscriptionPlanId)
    @Html.HiddenFor(m => m.BillingCycleId)
    <p>
        <label for="inputUsername">Email</label>
        @Html.TextBoxFor(m => m.Email, new { id = "inputEmail", @class = "form-control", @placeholder = "Username" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </p>
    <p>
        <label for="inputPassword">Password</label>
        @Html.PasswordFor(m => m.Password, new { id = "inputPassword", @class = "form-control", @placeholder = "Password" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
    </p>
    <p>
        <label for="inputPassword">Confirm Password</label>
        @Html.PasswordFor(m => m.ConfirmPassword, new { id = "inputConfirmPassword", @class = "form-control", @placeholder = "Confirm Password" })
        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
    </p>
    <p>
        <label for="inputCompanyName">Company Name</label>
        @Html.TextBoxFor(m => m.CompanyName, new { id = "inputCompanyName", @class = "form-control", @placeholder = "Company Name" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </p>
    <p>
        <label for="inputAddress">Address</label>
        @Html.TextBoxFor(m => m.Address, new { id = "inputAddress", @class = "form-control", @placeholder = "Address" })
        @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
    </p>
    <p>
        <label for="inputState">State</label>
        @Html.TextBoxFor(m => m.State, new { id = "inputState", @class = "form-control", @placeholder = "State" })
        @Html.ValidationMessageFor(m => m.State, "", new { @class = "text-danger" })
    </p>
    <p>
        <label for="inputZipCode">Zip Code</label>
        @Html.TextBoxFor(m => m.ZipCode, new { id = "inputZipCode", @class = "form-control", @placeholder = "Zip Code" })
        @Html.ValidationMessageFor(m => m.ZipCode, "", new { @class = "text-danger" })
    </p>
    <p>
        <button class="btn btn-primary" type="submit">Register</button>
    </p>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

