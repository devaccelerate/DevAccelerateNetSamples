@model Ejyle.DevAccelerate.Samples.AspNetMvc.Models.SendCodeViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Send Verification Code";
}

@using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("rememberMe", @Model.RememberMe)
    <p>
        Select Two-Factor Authentication Provider:
        @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
        <input type="submit" value="Submit" class="btn btn-primary" />
    </p>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
