@using Ejyle.DevAccelerate.Samples.AspNetMvc.Models
@model LoginViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Log In";
}

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <p>
        <label for="inputUsername">Username</label>
        @Html.TextBoxFor(m => m.Username, new { id = "inputUsername", @class = "form-control", @placeholder = "Username" })
        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
    </p>
    <p>
        <label for="inputPassword">Password</label>
        @Html.PasswordFor(m => m.Password, new { id = "inputPassword", @class = "form-control", @placeholder = "Password" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
    </p>
    <p>
        <div class="checkbox mb-3">
            <label>
                @Html.CheckBoxFor(m => m.RememberMe, new { id = "chkRememberMe" }) Remember me
            </label>
        </div>
    </p>
    <p>
        <button class="btn btn-primary" type="submit">Log In</button>
    </p>
    <p>
        @Html.ActionLink("Forgot your password?", "ForgotPassword")
    </p>
    <p>
        @Html.ActionLink("Create New Account", "ChooseSubscription")
    </p>
    <section id="socialLoginForm">
        @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
    </section>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}